{
  "database": {
    "rules": "database.rules.jsonc"
  },
  "functions": [
    {
      "source": "cloud-functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "ascii-docs-ui/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "auth": {
      "port": 5001
    },
    "functions": {
      "port": 5002
    },
    "database": {
      "port": 5003
    },
    "hosting": {
      "port": 5004
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
